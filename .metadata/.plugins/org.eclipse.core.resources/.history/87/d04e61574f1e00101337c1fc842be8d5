package com.kh.opendata;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.net.HttpURLConnection;
import java.net.MalformedURLException;
import java.net.URL;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;

@Controller
public class Earthquake {

	public static final String serviceKey = "7X77em5gX4WgOrWP3owuijw1JS%2BIWxvqscOFW048IKzYlOQWRp%2F%2F%2F081v0JpvR0y21MjEvM0ZW7Sk%2BiSihX0UA%3D%3D";
	
	@ResponseBody
	@RequestMapping
	public static String main(String[] args) throws IOException {
		String url = "https://apis.data.go.kr/1741000/EarthquakeIndoors3/getEarthquakeIndoors3List";
		
		url += "?serviceKey" + serviceKey;
		url += "&pageNo=1";
		url += "&numOfRows=2";
		url += "&type=xml";
		
		URL requestUrl = new URL(url);
		HttpURLConnection urlConnection = (HttpURLConnection)requestUrl.openConnection();
		urlConnection.setRequestMethod("GET");
		
		BufferedReader br = new BufferedReader(new InputStreamReader(urlConnection.getInputStream()));
		
		String responseText ="";
		while((line = br.readLine()) != null) {
			System.out.println(line);
		}
		
		br.close();
		urlConnection.disconnect();
		
		return "responseText";

	}

}
